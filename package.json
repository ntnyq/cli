{
  "name": "ntnyq",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@10.6.3",
  "description": "The ntnyq CLI",
  "keywords": [
    "cli",
    "ntnyq"
  ],
  "license": "MIT",
  "author": "ntnyq <ntnyq@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntnyq/cli.git"
  },
  "exports": "./dist/cli.js",
  "main": "./dist/cli.js",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ink": "^5.2.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-link": "^4.1.0",
    "ink-select-input": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "open": "^10.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.0.1",
    "@ntnyq/prettier-config": "^2.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "bumpp": "^10.1.0",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "nano-staged": "^0.8.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.6.8",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,tsx,md,yml,yaml,json}": "eslint --fix"
  }
}
